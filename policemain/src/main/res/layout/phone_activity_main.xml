<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <include
        layout="@layout/title_top"
        android:id="@+id/title_message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <android.support.v4.view.ViewPager
        android:id="@+id/viewPager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/radioGroup"
        android:layout_marginTop="60dp" />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:background="#FFFAF8FA"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_homepage"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="true"
            android:drawableTop="@drawable/bottom_five"
            android:gravity="center"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:text="首页"
            android:textColor="@drawable/selector_main_bottom_text" />

        <RadioButton
            android:id="@+id/rb_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bottom_one"
            android:gravity="center"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:text="消息"
            android:textColor="@drawable/selector_main_bottom_text" />

        <RadioButton
            android:id="@+id/rb_ptt"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:checked="false"
            android:drawableTop="@drawable/bottom_three"
            android:gravity="center"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:text="聊天"
            android:textColor="@drawable/selector_main_bottom_text" />

        <RadioButton
            android:id="@+id/rb_mine"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:button="@null"
            android:drawableTop="@drawable/bottom_two"
            android:gravity="center"
            android:scaleX="0.7"
            android:scaleY="0.7"
            android:text="我的"
            android:textColor="@drawable/selector_main_bottom_text" />
    </RadioGroup>

</RelativeLayout>
