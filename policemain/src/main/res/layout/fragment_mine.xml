<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/ll_mine"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_bg"
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:scaleType="fitXY"
            android:src="@drawable/banner2" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_bg"

            android:scrollbars="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:id="@+id/rl_myname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="4dp">

                    <ImageView
                        android:id="@+id/iv_name"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/myname" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/view3"
                        android:layout_alignStart="@+id/view3"
                        android:layout_alignTop="@+id/iv_name"
                        android:text="当前用户"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tv_myname"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/tv_name"
                        android:layout_marginLeft="18dp"
                        android:layout_toEndOf="@+id/tv_name"
                        android:layout_toRightOf="@+id/tv_name"
                        android:text="用户名"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/view3"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@id/iv_name"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_name"
                        android:background="#757575" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_set_mymessage"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="4dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_01"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ip" />

                    <ImageView
                        android:id="@+id/imageView4"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/tv_ip"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textView5"
                        android:layout_marginLeft="20dp"
                        android:layout_toEndOf="@+id/textView5"
                        android:layout_toRightOf="@+id/textView5"
                        android:text="192.168.1.111"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/view5"
                        android:layout_alignStart="@+id/view5"
                        android:layout_alignTop="@+id/iv_01"
                        android:text="当前基站"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/view5"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@id/iv_01"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_01"
                        android:background="#757575" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_vision"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="4dp">

                    <ImageView
                        android:id="@+id/iv_06"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/version" />

                    <ImageView
                        android:id="@+id/imageView3"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/tv_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textView4"
                        android:layout_marginLeft="20dp"
                        android:layout_toEndOf="@+id/textView4"
                        android:layout_toRightOf="@+id/textView4"
                        android:text="V1.0"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/view1"
                        android:layout_alignStart="@+id/view1"
                        android:layout_alignTop="@+id/iv_06"
                        android:text="当前版本"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/view1"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@id/iv_06"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_06"
                        android:background="#757575" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_set_mymessage1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="4dp">

                    <ImageView
                        android:id="@+id/iv_02"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="10dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/vedio_ip" />

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/tv_ip1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignTop="@+id/textView6"
                        android:layout_marginLeft="20dp"
                        android:layout_toEndOf="@+id/textView6"
                        android:layout_toRightOf="@+id/textView6"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/textView6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/view6"
                        android:layout_alignTop="@+id/iv_02"
                        android:text="管理员入口"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/view6"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@id/iv_02"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_02"
                        android:background="#757575" />

                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_white"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="4dp">

                    <ImageView
                        android:id="@+id/iv_16"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/check_contect" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right" />


                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/view11"
                        android:layout_alignStart="@+id/view11"
                        android:layout_alignTop="@+id/iv_16"
                        android:text="同步白名单"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/view11"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@id/iv_16"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_16"
                        android:background="#757575" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_exit18"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="4dp"
                    android:visibility="gone">

                    <ImageView
                        android:id="@+id/iv_18"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/check_contect" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/textView18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/view18"
                        android:layout_alignStart="@+id/view18"
                        android:layout_alignTop="@+id/iv_18"
                        android:text="同步电话簿"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/view18"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@id/iv_18"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_18"
                        android:background="#757575" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_setnfc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="4dp">

                    <ImageView
                        android:id="@+id/iv_nfc"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/exit" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/textViewnfc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/viewnfc"
                        android:layout_alignStart="@+id/viewnfc"
                        android:layout_alignTop="@+id/iv_nfc"
                        android:text="设置NFC"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/viewnfc"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@id/iv_nfc"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_nfc"
                        android:background="#757575" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_exit1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="4dp">

                    <ImageView
                        android:id="@+id/iv_1"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/exit" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/textView1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/view"
                        android:layout_alignStart="@+id/view"
                        android:layout_alignTop="@+id/iv_1"
                        android:text="设置移动数据"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/view"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@id/iv_1"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_1"
                        android:background="#757575" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_clock"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="4dp">

                    <ImageView
                        android:id="@+id/iv_clock"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/exit" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/textViewclock"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/viewclock"
                        android:layout_alignStart="@+id/viewclock"
                        android:layout_alignTop="@+id/iv_clock"
                        android:text="打开闹钟"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/viewclock"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@id/iv_clock"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_clock"
                        android:background="#757575" />
                </RelativeLayout>

                <RelativeLayout
                    android:id="@+id/rl_exit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/white"
                    android:paddingTop="4dp">

                    <ImageView
                        android:id="@+id/iv_17"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginTop="5dp"
                        android:scaleType="fitCenter"
                        android:src="@mipmap/exit" />

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="5dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/right" />

                    <TextView
                        android:id="@+id/textView17"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/view17"
                        android:layout_alignStart="@+id/view17"
                        android:layout_alignTop="@+id/iv_17"
                        android:text="重新登录"
                        android:textSize="16sp" />

                    <View
                        android:id="@+id/view17"
                        android:layout_width="match_parent"
                        android:layout_height="1px"
                        android:layout_below="@id/iv_17"
                        android:layout_marginLeft="10dp"
                        android:layout_toRightOf="@id/iv_17"
                        android:background="#757575" />
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</RelativeLayout>
